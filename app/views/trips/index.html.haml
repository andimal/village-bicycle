%nav
  .nav-actions
    .divvy-logo.icon d
    .map-slider{data: {hour: @current_hour}}

%section.map-container
  #map-day.map.map-day
  #map-night.map.map-night

  - (0..23).each do |hour|
    - if hour < 10
      - hour = "0#{hour}"
    .map.heatmap{id: "map-#{hour}", class: "map-#{hour}"}

  .map-control.map
  .map-markers.map

  .chart
    .chart-point
    .chart-caption
      %h4 xx hours

#marker-popover-template.marker-popover
  %h1 1. Millenium Station
  .content
    %h2.marker-popover-trip-count Trips from: 4000
    %h2.marker-popover-capacity Capacity: 35